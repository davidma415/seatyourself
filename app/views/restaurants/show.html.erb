<h1>View My Restaurant</h1>
<% if current_user %>
  <% if current_user.id == @restaurant.user_id  %>
    <%= link_to 'Edit Restaurant', edit_restaurant_path %>
    <%= link_to("Delete Restaurant", restaurant_path(@restaurant.id), method: :delete, data: {confirm: "Are you sure you want to delete this restaurant?"})  %>
  <% end %>
<% end %>
<h4><%= @restaurant.name %></h4>
<ul>
  <li>Name: <%= @restaurant.name %></li>
<% if @restaurant.address != nil %>
  <li>Address: <%= @restaurant.address %></li>
<% end %>
<% if @restaurant.price_range != nil %>
  <li>Price Range: <%= @restaurant.price_range %></li>
<% end %>
  <li>Opening Hour: <%= @restaurant.opening_hour.strftime("%I:%M %p") %></li>
  <li>Closing Hour: <%= @restaurant.closing_hour.strftime("%I:%M %p") %></li>
  <li>Max Capacity: <%= @restaurant.max_capacity %></li>
</ul>

<%= link_to 'Make a Reservation', new_restaurant_reservation_path(@restaurant.id) %>

<% if current_user %>
  <% if current_user.id == @restaurant.user_id  %>
    <%= link_to 'View Reservations', restaurant_reservations_path(@restaurant.id) %>
  <% end %>
<% end %>
